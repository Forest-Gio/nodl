{
    "compilerOptions": {
        "lib": ["es2021", "DOM"],
        "target": "ES6",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "outDir": "build",
        "declaration": true,
        "jsx": "react"
    },
    "include": ["./src", "./jest-setup.ts"],
    "exclude": ["./src/**/*.spec.ts", "./src/**/*.test.ts"]
}
